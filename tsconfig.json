{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "lib": ["es2015", "dom"],
        "target": "es6",
	    "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationDir": "./dist/typings/",
        "downlevelIteration": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}